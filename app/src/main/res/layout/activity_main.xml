<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/container">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:name="com.example.tuananh.module2.Map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapFragment"></fragment>
        <fragment
            android:name="com.example.tuananh.module2.MapManipulation.MapManipulationFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mapManipulationFragment"></fragment>
        <fragment
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:name="com.example.tuananh.module2.Nearby.NearbyFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nearbyFragment"></fragment>
    </FrameLayout>

</FrameLayout>